<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Material3.BottomNavigationView.ActiveIndicator.Fintech" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/transparent</item>
    </style>

    <style name="Widget.Material3.Button.PixelPal" parent="Widget.Material3.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/main_blue</item>
        <item name="android:background">@drawable/info_box_background</item>
    </style>

    <style name="CreatorItemStyle">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/main_blue</item>
        <item name="android:textSize">18sp</item>
        <item name="creatorShimmerColor">@color/light_red</item>
    </style>

    <style name="BottomNavTextActive">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/tektur_bold</item>
        <item name="android:fontFamily">@font/tektur_bold</item>
    </style>

    <style name="BottomNavTextInactive">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/tektur_medium</item>
        <item name="android:fontFamily">@font/tektur_regular</item>
    </style>

    <style name="TabTextUnselected">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/tektur_medium</item>
        <item name="android:fontFamily">@font/tektur_medium</item>
    </style>

    <style name="TabTextSelected">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/tektur_medium</item>
        <item name="android:fontFamily">@font/tektur_medium</item>
    </style>


</resources>