<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <myapplication.android.pixelpal.ui.custom_view.TextShimmerView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tektur_medium"
        android:paddingHorizontal="16sp"
        android:paddingVertical="14sp"
        android:textColor="@color/main_blue"
        android:textSize="18sp"
        tools:text="Программист"
        tools:textShimmerColor="@color/main_blue" />

    <View
        android:id="@+id/line_top"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginHorizontal="20dp"
        tools:background="@drawable/blue_line_gradient_horizontal" />

    <View
        android:id="@+id/line_bottom"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginHorizontal="20dp"
        tools:background="@drawable/blue_line_gradient_horizontal" />

</merge>