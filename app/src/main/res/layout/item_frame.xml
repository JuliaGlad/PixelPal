<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:padding="10dp"
        android:background="@drawable/frame_gradient_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@drawable/frame_gradient_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/frame_gradient_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@drawable/frame_gradient_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <myapplication.android.pixelpal.ui.custom_view.IconShimmerView
        android:id="@+id/top_left_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawable="@drawable/frame_corner_top_left"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        app:iconColor="@color/main_red"
        app:shimmerColor="@color/main_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <myapplication.android.pixelpal.ui.custom_view.IconShimmerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:drawable="@drawable/frame_corner_top_right"
        app:iconColor="@color/main_red"
        app:shimmerColor="@color/main_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <myapplication.android.pixelpal.ui.custom_view.IconShimmerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        android:drawable="@drawable/frame_corner_bottom_left"
        app:iconColor="@color/main_red"
        app:shimmerColor="@color/main_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <myapplication.android.pixelpal.ui.custom_view.IconShimmerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        android:drawable="@drawable/frame_corner_bottom_right"
        app:iconColor="@color/main_red"
        app:shimmerColor="@color/main_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>